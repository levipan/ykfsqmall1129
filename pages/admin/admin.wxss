page {
  background: white;
}

.container {
  width: 80%;
  margin: 4%;
  background: white;
  border: 20px solid white;
  border-radius: 98rpx;

}

/* 退出登陆 */
.tuichu {
  margin: 30rpx;
  background: gainsboro;
  font-size: 40rpx;
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.line_1px {
  background-color: white;
}

.item_root {
  background: #ffffff;
  padding: 8px 10px;
}

.textarea80px {
  /* 输入文本框的公有属性 */
  width: 90%;
  height: 85px;
  border: 1px solid var(--themeColor);
}

.textarea25px {
  width: 100%;
  height: 25px;
  border: 2px solid var(--themeColor);
  border-radius: 99rpx;
}


/*按钮 */
.btn_fabu {
  width: 60%;
  height: 40px;
  margin-top: 20px;
  align-items: center;
  border-radius: 95rpx;
}

/* 需要采购 */
.tip {
  text-align: center;
  font-size: 48rpx;
  color: red;
  margin-top: 60rpx;
}

.item {
  margin: 20rpx;
  font-size: 40rpx;
  border-bottom: 1px solid gainsboro;
}

.item_bottom {
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
}

.mingxi {
  color: var(--themeColor);
  border: 1px solid var(--themeColor);
  padding: 4rpx 12rpx;
}

/* 选择团长的弹窗 */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.7;
  background: black;
}

.popup_content {
  position: fixed;
  width: 80%;
  height: 800rpx;
  background-color: white;
  left: 0;
  right: 0;
  top: 5%;
  margin: 0 auto;
  display: flex;
  /* 左右居中 */
  align-items: center;
  /* 上下居中 */
  /* justify-content: center; */
  /* 竖着排列 */
  flex-direction: column;
  z-index: 999;
}

.pop_tip {
  font-size: 44rpx;
  color: var(--themeColor);
  margin: 10rpx;
}

.tuanzhang {
  width: 70%;
  padding: 10rpx;
  text-align: center;
  border-bottom: 1px solid gray;
}