.item {
  margin: 15rpx;
  padding: 10rpx;
  border-bottom: 1px solid gainsboro;
}

/* 选择团长的弹窗 */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.7;
  background: black;
}

.popup_content {
  position: fixed;
  width: 80%;
  height: 800rpx;
  background-color: white;
  left: 0;
  right: 0;
  top: 5%;
  margin: 0 auto;
  display: flex;
  /* 左右居中 */
  align-items: center;
  /* 上下居中 */
  /* justify-content: center; */
  /* 竖着排列 */
  flex-direction: column;
  z-index: 999;
}

.pop_tip {
  font-size: 44rpx;
  color: var(--themeColor);
  margin: 10rpx;
}

.tuanzhang {
  width: 70%;
  padding: 10rpx;
  text-align: center;
  border-bottom: 1px solid gray;
}